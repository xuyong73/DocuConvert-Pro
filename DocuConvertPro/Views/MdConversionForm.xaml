<Window x:Class="DocuConvertProRefactored.Views.MdConversionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocuConvertProRefactored.Views"
        mc:Ignorable="d"
        Title="Markdown转换选项"
        Height="250"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <!-- 转换器 -->
        <local:StringToBoolConverter x:Key="StringToBoolConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="选择转换格式" FontSize="18" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" />

        <!-- 格式选择 -->
        <StackPanel Grid.Row="1" Margin="20" Orientation="Horizontal" HorizontalAlignment="Center">
            <RadioButton Content="Word (.docx)" IsChecked="{Binding SelectedFormat, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter='docx'}" Margin="15" FontSize="14" />
            <RadioButton Content="HTML (.html)" IsChecked="{Binding SelectedFormat, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter='html'}" Margin="15" FontSize="14" />
        </StackPanel>

        <!-- 按钮 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="转换" Command="{Binding ConvertCommand}" Width="100" Margin="5" Height="35" />
            <Button Content="取消" Command="{Binding CancelCommand}" Width="100" Margin="5" Height="35" />
        </StackPanel>
    </Grid>
</Window>