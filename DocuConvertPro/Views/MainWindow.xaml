<Window x:Class="DocuConvertProRefactored.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocuConvertProRefactored.Views"
        mc:Ignorable="d"
        Title="DocuConvert Pro v3.2.1"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Background="{StaticResource LightColor}"
        Topmost="True">
    <Window.Resources>
        <!-- 转换器 -->
        <local:BoolToTextConverter x:Key="BoolToTextConverter" />
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- 卡片样式 -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" 
                                      ShadowDepth="1" 
                                      Opacity="0.08" 
                                      Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="391*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" Margin="0,-8,0,10" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="文件OCR转换工具" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource PrimaryColor}"
                           Margin="0,-1,0,0"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Command="{Binding ShowConfigCommand}" 
                    Width="30" 
                    Height="20" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="0,0,0,0" 
                    ToolTip="配置"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="{StaticResource PrimaryColor}">
                <Button.Content>
                    <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" 
                                      Fill="{StaticResource PrimaryColor}" 
                                      Width="18" 
                                      Height="18" 
                                      Stretch="Uniform"/>
                    </Button.Content>
                </Button>
            </Grid>

            <!-- 主内容区 -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 输入文件选择 -->
                    <Grid Grid.Row="0" Margin="0,0,0,0.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="110"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" 
                               Content="输入文件:" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryColor}" 
                               FontSize="14"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding InputFilePath, UpdateSourceTrigger=PropertyChanged}" 
                                 IsReadOnly="True" 
                                 HorizontalAlignment="Stretch" 
                                 Height="28" 
                                 Foreground="Black" 
                                 Padding="5" 
                                 VerticalContentAlignment="Center" 
                                 AllowDrop="True" 
                                 PreviewDragOver="InputFilePathTextBox_PreviewDragOver" 
                                 Drop="InputFilePathTextBox_Drop"/>
                        <Button Grid.Column="2" 
                                Content="浏览..." 
                                Command="{Binding SelectInputFileCommand}" 
                                HorizontalAlignment="Left" 
                                Height="28"/>
                    </Grid>

                    <!-- 输出目录选择 -->
                    <Grid Grid.Row="1" Margin="0,0.5,0,0.5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="110"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" 
                               Content="输出目录:" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryColor}" 
                               FontSize="14"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding OutputDirectory, UpdateSourceTrigger=PropertyChanged}" 
                                 IsReadOnly="True" 
                                 HorizontalAlignment="Stretch" 
                                 Height="28" 
                                 Foreground="Black" 
                                 Padding="5" 
                                 VerticalContentAlignment="Center"/>
                        <Button Grid.Column="2" 
                                Content="浏览..." 
                                Command="{Binding SelectOutputDirectoryCommand}" 
                                HorizontalAlignment="Left" 
                                Height="28"/>
                    </Grid>

                    <!-- 处理按钮 -->
                    <Grid Grid.Row="2" HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                            <Button Width="140" 
                                    FontWeight="Medium" 
                                    Height="28">
                                <Button.Style>
                                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="Content" Value="{Binding ProcessingButtonText}"/>
                                        <Setter Property="Command" Value="{Binding StartProcessingCommand}"/>
                                        <Setter Property="IsEnabled" Value="{Binding CanStartProcessing}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                <Setter Property="Command" Value="{Binding CancelProcessingCommand}"/>
                                                <Setter Property="IsEnabled" Value="True"/>
                                                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsMdConverting}" Value="True">
                                                <Setter Property="Command" Value="{Binding CancelProcessingCommand}"/>
                                                <Setter Property="IsEnabled" Value="True"/>
                                                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- 日志区域 -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="【日志输出】" 
                               FontSize="14" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryColor}" 
                               Margin="0,0,0,2"/>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding LogMessages}" 
                             ScrollViewer.VerticalScrollBarVisibility="Auto" 
                             ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                             Background="Transparent"
                             BorderThickness="0"
                             SelectionMode="Extended"
                             Name="LogListBox"
                             Padding="0"
                             Margin="0"
                             VerticalContentAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FormattedMessage}" 
                                           TextWrapping="Wrap" 
                                           Margin="0,0,0,0" 
                                           FontSize="12" 
                                           LineHeight="0.8">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource TextColor}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Level}" Value="Warning">
                                                    <Setter Property="Foreground" Value="#FFA500" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Level}" Value="Error">
                                                    <Setter Property="Foreground" Value="#FF4444" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.InputBindings>
                            <KeyBinding Key="C" Modifiers="Control" Command="{Binding CopySelectedLogsCommand}"/>
                        </ListBox.InputBindings>
                    </ListBox>
                </Grid>
            </Border>

            <!-- 状态栏分隔线 -->
            <Border Grid.Row="3" BorderBrush="#E2E8F0" BorderThickness="0,1,0,0" Margin="0,5,0,0" Grid.ColumnSpan="2"/>

            <!-- 状态栏 -->
            <Grid Grid.Row="3" Margin="0,2,0,0" Height="30" Background="{StaticResource DarkColor}" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 状态信息 -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            Margin="10,0,10,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                        <TextBlock Text="API配置: " FontWeight="Medium" Foreground="White"/>
                        <TextBlock Text="{Binding ApiConfigured, Converter={StaticResource BoolToTextConverter}, ConverterParameter='已配置|未配置'}" 
                                   Foreground="{Binding ApiConfigured, Converter={StaticResource BoolToTextConverter}, ConverterParameter='LightGreen|Red'}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="当前状态: " FontWeight="Medium" Foreground="White"/>
                        <TextBlock>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                            <Setter Property="Text" Value="处理中"/>
                                            <Setter Property="Foreground" Value="LightGreen"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsMdConverting}" Value="True">
                                            <Setter Property="Text" Value="转换中"/>
                                            <Setter Property="Foreground" Value="LightGreen"/>
                                        </DataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsProcessing}" Value="False"/>
                                                <Condition Binding="{Binding IsMdConverting}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Text" Value="就绪"/>
                                            <Setter Property="Foreground" Value="LightGray"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- 进度条 -->
                <ProgressBar Grid.Column="1" 
                        Value="{Binding ProgressValue}" 
                        Minimum="0" 
                        Maximum="100" 
                        VerticalAlignment="Center" 
                        IsIndeterminate="{Binding IsProcessing}" 
                        Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}" 
                        Margin="0,0,10,0" 
                        Foreground="{StaticResource SecondaryColor}"/>
            </Grid>
        </Grid>
</Window>